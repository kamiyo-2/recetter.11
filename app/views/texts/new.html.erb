 <div class="field">
   <%= f.label :process, "作り方" %><br />
    <%= f.text_area :process, class: :form_prosess %>
  </div>

  
  <div class="main-contents">
 <div class="image-content">
              <%= attachment_image_tag @recipe, :main_image, class: :card_img  %>
