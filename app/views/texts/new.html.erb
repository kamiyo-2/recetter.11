<div class="form-wrapper">
  <div class="tag-inner">

    <div class="">
      <h2 class="page-heading">新規レシピ投稿</h2>       
  <%= form_with(model: @recipe, url: recipes_path, local: true) do |f| %>
 <div class="field">
   <%= f.label :process, "作り方" %><br />
 <p class="detail__message">
            <%= @recipe.process %>
          </p>
  </div>  
  <div class="main-contents">
    <div class="image-content">
      <%= attachment_image_tag @recipe, :main_image %>
   </div>
   <div class="from-content">
     <div class="title-content">
       <div class="title-name">
         <p> 料理名 </p>
       </div>
     <div class="valu-name">
        <p><%= @recipe.title %></p>
       </div>
    </div>
    <div class="details-content">
    <div class="title-name">
         <p> 分量(何人前) </p>
          </div>   
        <div class="valu-name">
      <p> <%= @recipe.details %></p>
      </div>
    </div>    
<% end %>
     <div class="title-content">
       <% @foodstuffs.each do |foodstuff| %>
         <div class="title-name">
           <p><%= foodstuff.material %></p> 
         </div>
         <div class="valu-name">
           <%= foodstuff.quantity %>
         </div>
        <% end %>
     </div>
</div>
</div>

<%= form_with(model: @text, url:  recipe_texts_path, local: true) do |f| %>
  <div class="field">
    <%= f.label :text, "画像のコメント" %><br />
    <%= f.text_field :text %>
  </div>
   <div class="field">
    <%= f.label :text_image, "詳細の画像" %><br />
    <%= f.attachment_field :text_image %>
  </div>
  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>
    </div>
  </div>
</div>
