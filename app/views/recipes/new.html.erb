<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">新規レシピ投稿</h2>
       
  <%= form_with(model: @recipe, url: recipes_path, local: true) do |f| %>

   

  <div class="field">
    <%= f.label :title, "料理名" %><br />
    <%= f.text_field :title %>
  </div>

   <div class="field">
    <%= f.label :main_image, "メインの画像" %><br />
    <%= f.attachment_field :main_image %>
  </div>


 

  <div class="field">
   <%= f.label :process, "材料" %><br />
    <%= f.text_area :process, class: :form__text %>
  </div>

  

  <div class="field">
    <%= f.label :details, "作り方" %><br />
    <%= f.text_area :details, class: :form__text %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>

  <div class="check_box">
    <span>タグ</span>
    <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
     <div>
       <%= tag.label do %>
         <%= tag.check_box %>
         <%= tag.text %>
       <% end %>
     </div>
     
   <% end %>
 </div>

<% end %>




    </div>
  </div>
</div>
